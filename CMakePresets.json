{
  "$schema": "https://cmake.org/cmake/help/latest/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json",
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 31,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "common",
      "generator": "Ninja",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}",
        "ENABLE_VERBOSE_BUILD": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "vcpkg",
      "inherits": "common",
      "hidden": true,
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
    },
    {
      "name": "asan-ubsan-flags",
      "inherits": "vcpkg",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_ASAN_AND_UBSAN": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "clang-tidy",
      "inherits": "vcpkg",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_CLANG_TIDY": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "coverage-flags",
      "inherits": "vcpkg",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_COVERAGE": {
          "type": "BOOL",
          "value": "ON"
        }
      }
    },
    {
      "name": "debug",
      "inherits": "vcpkg",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "inherits": "vcpkg",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "debug-asan-ubsan",
      "inherits": [
        "debug",
        "asan-ubsan-flags"
      ]
    },
    {
      "name": "release-asan-ubsan",
      "inherits": [
        "release",
        "asan-ubsan-flags"
      ]
    },
    {
      "name": "coverage",
      "inherits": [
        "debug",
        "coverage-flags"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "common",
      "hidden": true,
      "verbose": true
    },
    {
      "name": "debug",
      "inherits": "common",
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "inherits": "common",
      "configurePreset": "release"
    },
    {
      "name": "debug-asan-ubsan",
      "inherits": "common",
      "configurePreset": "debug-asan-ubsan"
    },
    {
      "name": "release-asan-ubsan",
      "inherits": "common",
      "configurePreset": "release-asan-ubsan"
    },
    {
      "name": "coverage",
      "inherits": "common",
      "configurePreset": "coverage"
    }
  ],
  "testPresets": [
    {
      "name": "common",
      "hidden": true,
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error"
      }
    },
    {
      "name": "debug",
      "configurePreset": "debug",
      "inherits": "common"
    },
    {
      "name": "release",
      "configurePreset": "release",
      "inherits": "common"
    },
    {
      "name": "debug-asan-ubsan",
      "configurePreset": "debug-asan-ubsan",
      "inherits": "common"
    },
    {
      "name": "release-asan-ubsan",
      "configurePreset": "release-asan-ubsan",
      "inherits": "common"
    },
    {
      "name": "coverage",
      "configurePreset": "coverage",
      "inherits": "common"
    }
  ]
}